<div class="form-container">
  <div class ="form-border">
    <div class="form">
      <h2>LOGIN</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: 'Email', placeholder: 'Type your mail address'  %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, label: 'Password', placeholder: 'Type your password'  %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
